<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="UI.MapSelectionSceneController"
      spacing="20"
      alignment="CENTER"
      style="-fx-background-color: #2C3E50;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Select a Map"
           style="-fx-font-size: 24px; -fx-text-fill: white;"/>

    <ListView fx:id="mapList"
              prefWidth="400"
              prefHeight="300"
              style="-fx-background-color: #34495E; -fx-text-fill: white;"/>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="selectButton"
                text="Select Map"
                onAction="#onSelectMap"
                disable="true"
                style="-fx-background-color: #27AE60; -fx-text-fill: white;"/>

        <Button fx:id="backButton"
                text="Back"
                onAction="#onBack"
                style="-fx-background-color: #E74C3C; -fx-text-fill: white;"/>
    </HBox>
</VBox> 